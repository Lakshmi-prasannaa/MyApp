<h1>Listing countries</h1>

<table>
  <thead>
    <tr>
      <th>S.no</th>
      <th>Country Name</th>
    </tr>
  </thead>

  <tbody>
    <% @country.each do |country| %>
      <tr>
      	<td><%= country.id %></td>
        <td><%= country.name %></td>
       
       
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

